@model gradecalcmodel;  
<h3>Grade Calculator</h3>
<p>
    Please enter your percentage scored for each grade category listed to see your calculated grade
</p>
<form method="post">
    <label>Assignments</label>
    <input type="number" id="asgn" asp-for="Assignments" /><br />
    <label>Group Project</label>
    <input type="number" id="group" asp-for="GroupProject" /><br />
    <label>Quizzes</label>
    <input type="number" id="quiz" asp-for="Quizzes" /><br />
    <label>Exams</label>
    <input type="number" id="exam" asp-for="Test" /><br />
    <label>Intex</label>
    <input type="number" id="intex" asp-for="Intex" /><br />

    <input id="buttonsend" type="submit" value="Calculate" />

    <div asp-validation-summary="All"></div>

</form>
<br />
<br />
<script src="~/lib/jquery/jquery-3.6.0.min.js"></script>
<script src="~/js/gradecalc.js"></script>
